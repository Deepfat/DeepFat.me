@model MartinKRC2.Models.Resource

@{
    Layout = "_LayoutAdmin";
}

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Edit</h2>

                <form asp-action="Edit">
                    <div class="form-horizontal">
                        <h4>Resource</h4>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Description" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="FAIconClass" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="FAIconClass" class="form-control" />
                                <span asp-validation-for="FAIconClass" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="ResourceGroupId" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <input asp-for="ResourceGroupId" class="form-control" />
                                <span asp-validation-for="ResourceGroupId" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="ShortUrl" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="ShortUrl" class="form-control" />
                                <span asp-validation-for="ShortUrl" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="TargetUrl" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="TargetUrl" class="form-control" />
                                <span asp-validation-for="TargetUrl" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Title" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <div class="checkbox">
                                    <input asp-for="VisibleOnSite" />
                                    <label asp-for="VisibleOnSite"></label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </form>

                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
