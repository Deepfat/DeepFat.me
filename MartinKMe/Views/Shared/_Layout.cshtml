@using System.Security.Claims
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - MartinK.Me</title>

        <environment names="Development">
            <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
            <link rel="stylesheet" href="~/css/site.css" />
        </environment>
        <environment names="Staging,Production">
            <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.5/css/bootstrap.min.css"
                  asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
                  asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
            <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        </environment>

        <link href='https://fonts.googleapis.com/css?family=Lato:400,700,900' rel='stylesheet' type='text/css'>

        <script src="https://use.fontawesome.com/5ac6e5255d.js"></script>

    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a asp-controller="Home" asp-action="Index" class="navbar-brand">MartinK.me</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a asp-controller="Home" asp-action="Speaking">Speaking</a></li>
                        <li><a asp-controller="Home" asp-action="Resources">Resources</a></li>
                        <li><a href="https://blogs.msdn.microsoft.com/martinkearn/">Blog</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right  hidden-xs">
                        <li><a href="https://twitter.com/MartinKearn"><i class="fa fa-twitter fa-lg" aria-hidden="true"></i></a></li>
                        <li><a href="https://uk.linkedin.com/in/martin-kearn-204a681"><i class="fa fa-linkedin fa-lg" aria-hidden="true"></i></a></li>
                        <li><a href="skype:martinkearn"><i class="fa fa-skype fa-lg" aria-hidden="true"></i></a></li>
                        <li><a href="https://github.com/martinkearn"><i class="fa fa-github fa-lg" aria-hidden="true"></i></a></li>
                        <li><a href="http://stackoverflow.com/users/1601158/martin-kearn"><i class="fa fa-stack-overflow fa-lg" aria-hidden="true"></i></a></li>
                        <li><a href="mailto:martin.kearn@microsoft.com?Subject=Enquiry%20from%20Martink.me"><i class="fa fa-envelope-o fa-lg" aria-hidden="true"></i></a></li>
                    </ul>
                    @*@await Html.PartialAsync("_LoginPartial")*@
                </div>
            </div>
        </div>

        @RenderBody()

        <footer class="footer container-fluid">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <p>Don't be a stranger...</p>
                            <a href="https://twitter.com/MartinKearn"><i class="fa fa-twitter fa-2x footer-icon" aria-hidden="true"></i></a>
                            <a href="https://uk.linkedin.com/in/martin-kearn-204a681"><i class="fa fa-linkedin fa-2x footer-icon" aria-hidden="true"></i></a>
                            <a href="skype:martinkearn"><i class="fa fa-skype fa-2x footer-icon" aria-hidden="true"></i></a>
                            <a href="https://github.com/martinkearn"><i class="fa fa-github fa-2x footer-icon" aria-hidden="true"></i></a>
                            <a href="http://stackoverflow.com/users/1601158/martin-kearn"><i class="fa fa-stack-overflow fa-2x footer-icon" aria-hidden="true"></i></a>
                            <a href="mailto:martin.kearn@microsoft.com?Subject=Enquiry%20from%20Martink.me"><i class="fa fa-envelope-o fa-2x footer-icon" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
        </footer>

        <environment names="Development">
            <script src="~/lib/jquery/dist/jquery.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
        </environment>
        <environment names="Staging,Production">
            <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.1.4.min.js"
                    asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                    asp-fallback-test="window.jQuery">
            </script>
            <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.5/bootstrap.min.js"
                    asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                    asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
            </script>
            <script src="~/js/site.min.js" asp-append-version="true"></script>
        </environment>

        @RenderSection("scripts", required: false)
    </body>
</html>
